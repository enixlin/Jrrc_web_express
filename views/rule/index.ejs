<script>
    Ext.onReady(function() {

        function initRuleTree() {

            var treeStore = Ext.create('Ext.data.TreeStore', {
                fields: ['id', 'name', 'url', 'pid'],
                proxy: {
                    url: '/rule/makeRuleTree',
                    type: 'ajax'
                }
            });
            var treeList = Ext.create('Ext.tree.Panel', {
                width: '100%',
                height: 400,
                renderTo: Ext.getCmp("tabPanel.items"),
                //id: 'treepanel',
                rootVisible: false,
                store: treeStore,
                displayField: 'name',

            });
        }

        initRuleTree();
    });
</script>